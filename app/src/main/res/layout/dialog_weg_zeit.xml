<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_weg_zeit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.patrick_sawadski.reibungsversuch.WegZeitDialog"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/dialog_wegzeit_weg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etWeg"
                android:inputType="numberDecimal" />

            <TextView
                android:text="@string/dialog_wegzeit_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/dialog_wegzeit_zeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView34" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etZeit" />

            <TextView
                android:text="@string/dialog_wegzeit_sekunden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/dialog_wegzeit_button_ueberspringen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUeberspringen"
            android:layout_weight="1" />

        <Button
            android:text="@string/dialog_wegzeit_button_hinzufuegen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHinzufuegen"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
